.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__name
        = current_user.name
      %ul.side-header__box__icon
        %li.side-header__box__edit
          = link_to new_group_path do
            = icon('fas', 'edit', class: "edit__btn")
        %li.side-header__box__group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: "cog__btn")
  .group-bar
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group-name
            = group.name
          .group-message
